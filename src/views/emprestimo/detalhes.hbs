{{#> main}}
  {{#*inline "content"}}
    <div class="emprestimos-container">
      <h2>Detalhes do Empréstimo</h2>
      <p><strong>Livro:</strong> {{emprestimo.livro.nome_livro}}</p>
      <p><strong>Data do Empréstimo:</strong> {{emprestimo.data_emprestimo}}</p>
      <p><strong>Data Prevista de Devolução:</strong> {{emprestimo.data_prevista_devolucao}}</p>

      {{#if emprestimo.data_devolucao}}
        <p><strong>Devolvido em:</strong> {{emprestimo.data_devolucao}}</p>
      {{else}}
        <form action="/emprestimos/{{emprestimo.id_emprestimo}}/devolver" method="post">
          <button class="devolver-button" type="submit">Devolver</button>
        </form>
      {{/if}}
    </div>
  {{/inline}}
{{/main}}
